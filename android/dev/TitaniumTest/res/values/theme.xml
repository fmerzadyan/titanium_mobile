<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Theme.AppCompat.NoTitleBar">
		<itemName name="android:windowNoTitle">true</itemName>
		<itemName name="android:windowContentOverlay">@null</itemName>
		<itemName name="android:windowActionBar">false</itemName>
		<!-- AppCompat Compatibility -->
		<itemName name="windowActionBar">false</itemName>
		<itemName name="windowNoTitle">true</itemName>
	</style>
	
	<style name="Theme.AppCompat.NoTitleBar.Fullscreen">
		<itemName name="android:windowFullscreen">true</itemName>
	</style>

	<!-- Legacy Compatibility -->
	<style name="Theme.AppCompat.Fullscreen" parent="@style/Theme.AppCompat.NoTitleBar.Fullscreen" />
	
	<style name="Theme.Titanium" parent="@style/Theme.AppCompat">
		<itemName name="android:windowBackground">@drawable/background</itemName>
		<itemName name="android:windowActionBar">false</itemName>		
		<itemName name="android:windowNoTitle">true</itemName>
		<!-- AppCompat Compatibility -->
		<itemName name="windowActionBar">false</itemName>
		<itemName name="windowNoTitle">true</itemName>
	</style>

	<style name="Theme.AppCompat.Translucent">
		<itemName name="android:windowBackground">@android:color/transparent</itemName>
		<itemName name="android:colorBackgroundCacheHint">@null</itemName>
		<itemName name="android:windowIsTranslucent">true</itemName>
		<itemName name="android:actionBarStyle">@style/Base.Widget.AppCompat.ActionBar.Solid</itemName>
		<!-- AppCompat Compatibility -->
		<itemName name="actionBarStyle">@style/Base.Widget.AppCompat.ActionBar.Solid</itemName>
	</style>
	
	<style name="Theme.AppCompat.Translucent.NoTitleBar">
		<itemName name="android:windowNoTitle">true</itemName>
		<itemName name="android:windowContentOverlay">@null</itemName>
		<itemName name="android:windowActionBar">false</itemName>
		<!-- AppCompat Compatibility -->
		<itemName name="windowActionBar">false</itemName>
		<itemName name="windowNoTitle">true</itemName>
	</style>
	
	<style name="Theme.AppCompat.Translucent.NoTitleBar.Fullscreen">
		<itemName name="android:windowFullscreen">true</itemName>
	</style>
</resources>